extends layout

block content
	//- For future use
		|<p class="date">Created : <%= $.format.date(created_at, "ddd dd MMM yyyy, HH:mm") %></p>

	//- Client-side Templates
	//- This part of the DOM must be ready before defining the views as they use it for templating
	include clientSideTemplates.html

	//- Client-side application's scripts
	//- Load the script "js/main.js" as our entry point
	script(data-main="javascripts/main", src="javascripts/lib/require.js")

	// Login/Register form
	div#form-wrapper(style="display:none")
		form#login(autocomplete="on")
			h1 Log in
			p.errors
			p.email
				label(for="email") Your email address
				input(id="email", name="email", required="required", type="text", placeholder="myemail@mail.com", autofocus)
			p.password
				label(for="password") Your password
				input(id="password", name="password", required="required", type="password", placeholder="eg. X8df!90EO")
			p.keeplogin
				input(id="keeplogin", name="keeplogin", type="checkbox", value="keeplogin")
				label(for="keeplogin") Keep me logged in
			p.button.login
				input(id="do-login", type="submit", value="Login", data-init-value="Login")
			p.switch
				|Not a member yet ?
				button#toregister Join us
		form#register(autocomplete="on", style="display:none")
			h1 Sign up
			p.errors
			p.email
				label(for="emailSignup") Your email address
				input(id="emailSignup", name="emailSignup", required="required", type="text", placeholder="myemail@mail.com")
			p.email
				label(for="emailSignupConfirm") Please confirm your email address
				input(id="emailSignupConfirm", name="emailSignupConfirm", required="required", type="text", placeholder="myemail@mail.com")
			p.password
				label(for="passwordSignup") Your password
				input(id="passwordSignup", name="passwordSignup", required="required", type="password", placeholder="eg. X8df!90EO")
			p.password
				label(for="passwordSignupConfirm") Please confirm your password
				input(id="passwordSignupConfirm", name="passwordSignupConfirm", required="required", type="password", placeholder="eg. X8df!90EO")
			p.button.signin
				input(id="do-register", type="submit", value="Sign up", data-init-value="Sign up")
			p.switch
				|Already a member ?
				button#tologin Go log in

	// Application skeleton

	div#main
		header
			h1 meeno
			nav
				// Commands to navigate between the different tabs
				ul#nav
					li.help Help
					li.browse.notes Browse notes
					li.browse.tasks.selected Browse tasks
					li.browse.tags Browse tags
					//li.admin Manage
			div#sync-status
		div#tabs
			div.tab.help
				article
					section
						h1 Comment démarrer
						p Lorem ipsum dolor sit amet, consectetur adipisicing elit. Eveniet quos distinctio dolores deleniti perferendis eius aliquam omnis delectus sit adipisci rem sequi amet velit cupiditate explicabo molestiae harum numquam praesentium!
					section
						h1 Rechercher du contenu
						p Lorem ipsum dolor sit amet, consectetur adipisicing elit. Eveniet quos distinctio dolores deleniti perferendis eius aliquam omnis delectus sit adipisci rem sequi amet velit cupiditate explicabo molestiae harum numquam praesentium!
			div.tab.browse.selected
				div.listobjects.notes
					div.col1.dropzone
					// empty
					div.col2
						div.search-wrapper
							div.super-input
								span.objectButtons
								span
									input.mousetrap.autocomplete(type="text", placeholder="filter by objects", style="display:none")
								input.mousetrap.search(type="text", autofocus, placeholder="search notes")
							div.filter-editor
								ul
								input(style="display:none", type="text", placeholder="type a name for this new filter")
								button.action.delete(style="display:none") Delete active filter
								button.action.save(style="display:none") Save current filter
								button.action.saveConfirm(style="display:none") Save filter under this name
						//div.actions-contextual-selection
							button.select-all Tout sélectionner
							button.unselect-all Tout déselectionner
						//div.actions-contextual-trigger
							button.delete Supprimer
						//ul.actions-contextual
							li.delete
								span.action Delete notes
								span.cancel Cancel
						// Hereafeter will be displayed the objects
						ul.objects.notes
					div.col3
				div.listobjects.tasks.selected
					div.col1
						div.dropzone
							.title dropzone
							.subtitle Drag tasks and drop them below to postpone them
							ul.zones
								li.droppable.today Today
								li.droppable.tomorrow Tomorrow
								li.droppable.nextweek Next week
								li.droppable.later Later
						div.actions
							div.new-task
								.title NEW TASK
								.subtitle Type here the content of a new task you would like to create. 
								input.mousetrap(type="text", placeholder="Describe here your new task")
								//- input class is mousetrap to ensure mousetrap can capture keyboard events in here
								button save task
					div.col2
						div.search-wrapper
							div.super-input
								span.objectButtons
								span
									input.mousetrap.autocomplete(type="text", placeholder="filter by objects", style="display:none")
								input.mousetrap.search(type="text", autofocus, placeholder="search tasks")
							div.filter-editor
								ul
								input(style="display:none", type="text", placeholder="type a name for this new filter")
								button.action.delete(style="display:none") Delete active filter
								button.action.save(style="display:none") Save current filter
								button.action.saveConfirm(style="display:none") Save filter under this name
						//div.actions-contextual-selection
							button.select-all Tout sélectionner
							button.unselect-all Tout déselectionner
						//div.actions-contextual-trigger
							button.delete Supprimer
						//ul.actions-contextual
							li.delete
								span.action Delete tasks
								span.cancel Cancel
						span
							button.filter-checked(data-step="0") Now showing todo only
							button.filter-checked(data-step="1", style="display:none") Now showing done only
							button.filter-checked(data-step="2", style="display:none") Now showing both
						// Hereafeter will be displayed the objects
						ul.objects.tasks.draggable
					div.col3
						//div.saved-filters
							.title saved filters
							.subtitle Click on the star on the right end of the search bar to save the current filter and browse quicker next time
				div.listobjects.tags
					div.col1.dropzone
					// empty
					div.col2
						div.search-wrapper
							div.super-input
								span.objectButtons
								span
									input.mousetrap.autocomplete(type="text", placeholder="filter by objects", style="display:none")
								input.mousetrap.search(type="text", autofocus, placeholder="search tags")
							div.filter-editor
								ul
								input(style="display:none", type="text", placeholder="type a name for this new filter")
								button.action.delete(style="display:none") Delete active filter
								button.action.save(style="display:none") Save current filter
								button.action.saveConfirm(style="display:none") Save filter under this name
						//div.actions-contextual-selection
							button.select-all Tout sélectionner
							button.unselect-all Tout déselectionner
						//div.actions-contextual-trigger
							button.delete Supprimer
						//ul.actions-contextual
							li.delete
								span.action Delete tags
								span.cancel Cancel
						// Hereafeter will be displayed the objects
						ul.objects.tags
					div.col3.saved-filters
					// empty
		div#editors