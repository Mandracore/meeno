					// Hereafeter will be displayed the objects
					ul.objects.tasks
				div.listobjects.tags
					div.search-wrapper
						div.super-input
							span.objectButtons
							span
								input.mousetrap.autocomplete(type="text", placeholder="filter by objects", style="display:none")
							input.mousetrap.search(type="text", autofocus, placeholder="search tags")
						div.filter-editor
							ul
							input(style="display:none", type="text", placeholder="type a name for this new filter")
							button.action.delete(style="display:none") Delete active filter
							button.action.save(style="display:none") Save current filter
