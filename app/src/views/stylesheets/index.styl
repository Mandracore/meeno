
@import 'nib'

// J : tag
// T : croix
// I : poubelle
// V : editer
// r : editer

global-reset()
reset-html5()

cBgGrey            = lighten(#000000, 20%)
cButtonBorder0     = rgba(255, 255, 255, .3)
cButtonBorder1     = rgba(255, 255, 255, .4)
cButtonBg1         = rgba(255, 255, 255, .08)
cButtonBg2         = rgba(255, 255, 255, .06)
cButton            = rgba(255, 255, 255, .5)
cButtonActive      = rgba(255, 255, 255, 1)
cButtonMilestone0  = rgba(255, 255, 255, .1);
cButtonMilestone05 = rgba(255, 255, 255, .5);
cButtonMilestone1  = rgba(255, 255, 255, 1);

@font-face
	font-family "modernpics"
	src url("../font/modernpics.otf")
	
@font-face
	font-family "dense"
	src url("../font/Dense-Regular.otf")

html
	width 100%
	height 100%
	overflow hidden
	background-color cBgGrey
	font-size 16px
	
body
	margin 0 auto
	width 100%
	height 100%
	position relative
	background none

.red
	background-color red
	opacity .8

.green
	background-color green
	opacity .8

.white
	background-color white
	opacity .8
	
#main, #main > .content, #main > .content > .browser, , #main > .content > .browser > .tab
	height 100%

/*===================================================================================
------- MAIN NAVIGATION --------------------------------------------------------------
=====================================================================================*/

// Hacks for mobile design
@media screen and (max-width: 768px) // to detect mobile phones
	.navigation
		width 3em
		height 3em
		overflow hidden
		background-color blue
		.command
			margin auto
			.close
				display none
			.open
				display block
				height 3em
				width 3em
		&.active
			width 75%
			z-index 1
			position absolute
			height 100%
			.command
				.close
					display block
					width 3em
					height 3em
				.open
					display none

// For other displays


/*===================================================================================
------- BROWSER DESIGN --------------------------------------------------------------
=====================================================================================*/

// Hacks for mobile design
@media screen and (max-width: 768px) // to detect mobile phones
	.search-box
		position relative
		top -3em
		left 3em
	.listobjects
		position relative
		top -3em
		li
			&:hover
				.label
					float left
				

// For other displays
.search-box
	width 100%
	height 3em
	
.listobjects
	display none
	&.selected
		display block
		height calc(100% - 3em)
	.milestones
		display block
		height 3em
		padding .5em 0
		li
			display inline-block
			color cButtonMilestone0
			text-transform uppercase
			letter-spacing .05em
			font-family Dense
			font-size 2em
			&:hover
				color cButtonMilestone05
				cursor pointer
			&:active, &.active
				color cButtonMilestone1
	.filter-checked
		padding 1em 0
		button
			display none
			&.active
				display block
				padding 0.1em 0.8em
				font-size 0.7em
				border 1px solid rgba(255, 255, 255, 0.2)
				border-radius 1em
				background-color transparent
				color rgba(255, 255, 255, 0.5)
				text-transform uppercase

	.objects
		display block
		height calc(100% - 1em)
		overflow auto
		li
			color white
			height 3em
			border-left 1px solid cButtonBorder0
			border-right 1px solid cButtonBorder0
			border-bottom 1px solid cButtonBorder0
			&:first-child
				border-top 1px solid cButtonBorder0
			.content
				cursor pointer
				width 100%
				height 3em
				.due
					height 1.6em
					float left
					padding .7em 0 .7em .7em
					width 2em
					opacity 0.3
					&:hover
						cursor pointer
					&.urgent
						opacity 1
					&.veryurgent
						opacity 1
						color orange
					.day
						display block
						font-size .9em
						font-weight bold
					.month
						display block
						text-transform uppercase
						font-size 0.7em
				.labelandtags
					display inline-block
					width calc(100% - 2.7em) // 2.3 = padding + width of block "due"
					height 100%
					line-height 3em
					.tags
						text-align right
					.label
						text-overflow ellipsis
						overflow hidden
						white-space nowrap
					.expand
						display none
			.actions
				display none
				cursor pointer
			&:hover, &.active
				background-color cButtonBg1
				border-left 1px solid cButtonBorder1
				border-right 1px solid cButtonBorder1
				border-bottom 1px solid cButtonBorder1
				&:first-child
					border-top 1px solid cButtonBorder1
				.actions
					display inline-block
					height 100%
					line-height 3em
					float right
					width 3em
					border-left 1px solid cButtonBorder1
					&:hover
						background-color cButtonBg2
					button
						border none
						background-color transparent
						margin 0 auto
						display block
						height 3em
						width 100%
						padding 0
						color cButton
						&:hover
							cursor pointer
						&:active
							color cButtonActive
				.content
					display inline-block
					width calc(100% - 3em - 2px)
					.labelandtags
						.tags
							display none
						.label
							width calc(100% - 3em)
						.expand
							display inline-block
							float right
							width 3em
							text-align center
							height 100%
							button
								border none
								width 100%
								height 100%
								display block
								background-color transparent
								color cButton
								&:hover
									cursor pointer
								&:active
									color cButtonActive
					&:hover
						background-color cButtonBg2