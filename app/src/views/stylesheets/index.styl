@import 'nib'



cBgGrey        = lighten(#000000, 20%)
cTextSec       = lighten(#000000, 50%)
cTextSecActive = lighten(#000000, 70%)

cTxtGrey          = lighten(#000000, 50%) // grey non clickable
cTxtBtnGrey0      = lighten(#000000, 40%) // grey activable
cTxtBtnGrey1      = lighten(#000000, 70%) // grey activable active
cTxtBtnHeadWhite0 = lighten(#000000, 50%) // header white clickable
cTxtBtnHeadWhite1 = lighten(#000000, 90%) // header white clickable active
cTxtWhite         = lighten(#000000, 90%) // important white texte
cTxtBtnBlue0      = #348bcd // blue clickable
cTxtBtnBlue1      = darken(cTxtBtnBlue0, 50%) // blue clickable active



cText         = #434343
cTextFaded    = lighten(#535353, 40%)
cTextRev      = #dddddd
cTextRevFaded = darken(#dddddd, 40%)
cDarkGrey     = lighten(#000000, 30%)
cLightGrey    = lighten(#000000, 90%)
cBlueLine     = lighten(#5e939f, 40%)
wApp          = 1200px
wRightCol     = 850px
wLeftCol      = wApp - wRightCol
wLeftColPad   = 35px
wRightColPad  = 50px
zLiner        = 5
pyLiner       = 80px
pHeadersV     = 40px
pWrappPadV    = pyLiner - pHeadersV
hTabs         = 40px
hControls     = 30px
hFadeOut      = 100px

global-reset()
reset-html5()

@font-face
	font-family "modernpics"
	src url("../font/modernpics.otf")

html
	width 100%
	height 100%
	overflow hidden
	background-color #777
	font-size 16px
	

// FONT SIZES
.col1, .col3
	font-size 0.95rem
.col2
	font-size 1rem
header, body:before
	font-size 1.1rem

rFontSize = 1.5




body
	margin 0 auto
	width 100%
	height 100%
	position relative
	background none
	&:before
		content ""
		margin-top rFontSize * 2em
		width 100%
		box-shadow 0 0 0.5em black
		position absolute
		height calc(100% - 2em)
		display block


#main
	height 100%
	padding 0
	position relative

	max-width 1280px
	margin 0 auto

header
	clearfix()
	color #FFF
	position relative
	top 0
	h1
		font-size rFontSize * 1em
		float left
		padding .5em
		margin 0
		width 8em
				
nav
	float left
	ul
		clearfix()
		list-style none
		padding 0
		margin 0
		li
			float left
			// padding .5em
			padding (((rFontSize * 2) - 1) / 2) * 1em //revoir formule de calcul
			&.selected,&:hover,&:active
				background-color #FFF
				cursor pointer
				color black
	.object
		max-width: 7em;
		overflow: ellipsis;
		


#tabs
	background-color cBgGrey
	height '-moz-calc(%s - %s)' % (100% rFontSize * 2em)
	height '-webkit-calc(%s - %s)' % (100% rFontSize * 2em)
	height 'calc(%s - %s)' % (100% rFontSize * 2em)
	max-width 1280px
	margin auto 0

.listobjects
	height 100%
	overflow-y hidden
	.col2
		height 100%






// Preparing BROWSER grid
.listobjects
	.col1, .col2, .col3
		float:left
	.col1, .col3
		width 20%
	.col2
		width 60%
		
// Styling BROWSER fonts
.listobjects
	font-family 'Arial'
	.col1, .col3
		color cTextSec
		.title
			margin 0 1em 0.3em 1em
		.subtitle
			margin 0 1em 1em
		.zones
			margin 0 1em
	.zones li
		border 1px solid cTextSec
		border-radius 5px
		padding 20px
		margin-bottom 0.5em
		&:hover
			color cTextSecActive
			border 1px solid cTextSecActive
		
	



.actions-main,.actions-contextual
	width 15em
	list-style none
	margin 0
	padding 0
	li
		padding .5em
		margin-bottom .25em
		cursor pointer
		&:before
			font-family 'modernpics'
			position relative
			font-size 1.5em
			margin 0 5px 0

.actions-main
	height 100%
	padding-top 5.5em
	position absolute
	z-index 1
	li
		margin-right 1em
		background-color rgba(255,255,255,.5)
		&:before
			content "+"
		&:hover,&:active
			background-color #FFF

.actions-contextual
	z-index 2
	li
		background-color #FFF
		&.delete:before
			content 'I'
		&.close:before
			content 'X'
		&.clone:before
			content 'W'
		&.related:before
			content 'K'
		&.unselect:before
			content 'K'
		&.select
			display list-item
			&:before
				content '%'
	&.hasSelected li
		display list-item
.tab.object.note .actions-contextual li
	display list-item



.tab
	display none
	&.selected
		display block
		height 100%
	&.help, &.object
		overflow-y scroll

.browse
	.filter
		input
			width 100%
		ul
			list-style none
			padding 0
			margin 0
			display block
			border-top 1px cDarkGrey solid
			li
				border-top 3px transparent solid
				color cDarkGrey
				display inline-block
				padding .5em
				vertical-align middle
				opacity .7
				&.selected,&:hover,&:active
					border-top-color cDarkGrey
					opacity 1
					cursor pointer
				&:before
					margin-right 10px
					font-size .9em

.listobjects
	display none

	&.selected
		display block
	.super-input
			border 1px solid grey
			padding 6px 5px
			margin 0 10px 0 0
		.objectButtons span
			background lightgrey
			padding 2px 5px
			margin 0 5px 0 0
		input.search
			border none
		input.autocomplete
			border 1px dotted grey
			margin 0 5px
	.filter-editor
		li
			display inline-block
			opacity 0.6
			padding 0.3em
			margin 0 0.5em 0 0
			font-size 0.9em
			&.active, &:hover
				opacity 1
			&:hover
				cursor pointer
			&:before
				opacity 0.6
				margin-right 0.5em
	ul.objects
		overflow-y: scroll;
		height: calc(100% - 6em);
		// NEW BEFORE !!!
		list-style-type none
		margin 1em 0 0
		padding 0
		li
			margin 0
			padding 0.5em
			&:hover
				background-color rgba(0,0,0,0.1)
			span.button
				opacity 0
				text-shadow 1px 1px 1px white
				margin 0 0 0 10px
				font-size 0.9em
			&:hover span.button
				opacity 0.5
				&:before
					font-family 'modernpics'
					position relative
					font-size 1.3em
					margin 0 5px 0
				&:hover
					opacity 1
					cursor pointer
	.checkbox
		margin 0 8px 0 0
	
	// Contextual actions
	.actions-contextual-trigger
		display none
		button
			display none
	.actions-contextual-selection
		display none
		.select-all, .action
			display inline-block
		.unselect-all
			display none
	.actions-contextual
		.cancel
			display none


	ul.objects
		span.delete:before
			content 'I'
		/*span.edit:before
			content 'e'*/
	ul.notes
		li
			p
				margin 0
				&.date
					font-size 0.85em
					opacity 0.5
		span.tags span
			color grey

.tab
	.editable
		opacity 0.7
		&:hover, &:focus
			opacity 1
	h1
		font-size: 2em
	section.edit-content
		margin 20px 0 0 0

.edit-content
	&:focus
		border 0
	input
		border 0
		background-color transparent
	.object
		margin 5px
		padding 0 5px
		background-color lightgrey
		opacity 0.7
		border 1px dashed grey
		text-shadow white 0 1px 0
		border-radius 5px
		&:before
			margin 0 5px 0 0
			font-size .8em
			color grey
			text-shadow white 0 1px 0
	.locked
		border 1px solid grey
		opacity 1
	.broken
		border 1px solid red
		opacity 0.7

#footer
	background-color rgba(0,0,0,.35);
	color #FFF
	clearfix()
	p
		margin 0
		padding 1em
	.current-action
		float left
	.sync-status
		float right
		width 15em
		background-color rgba(0,0,0,.35)