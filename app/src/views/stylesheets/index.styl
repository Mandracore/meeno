@media screen and (max-width: 768px) // to detect mobile phones
	#main
		height 100%
		& > .content
			height calc(100% - 3em)
	.search-box
		width calc(100% - 3em + 20px)
		position relative
		top -4em
		left calc(3em - 10px)
	.listobjects
		position relative
		top -3em