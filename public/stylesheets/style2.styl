@import 'nib'

cText         = #434343
cTextFaded    = lighten(#535353, 40%)
cTextRev      = #dddddd
cTextRevFaded = darken(#dddddd, 40%)
cDarkGrey     = lighten(#000000, 30%)
cLightGrey    = lighten(#000000, 90%)
cBlueLine     = lighten(#5e939f, 40%)
wApp          = 1200px
wRightCol     = 800px
wLeftCol      = wApp - wRightCol
wLeftColPad   = 35px
wRightColPad  = 50px
zLiner        = 5
pyLiner       = 147px
pHeadersV     = 40px
pWrappPadV    = pyLiner - pHeadersV
hTabs         = 40px
hControls     = 40px
hFadeOut      = 100px


//==============================================================
// Layout 2
//==============================================================

#header, #fixed, #backgrounds
	position fixed
	top 0
	left 50%
	margin-left -(wApp / 2)
	padding 0
	width wApp
#header
	z-index zLiner + 10
	.app, .search, .editor
		position absolute
		z-index zLiner + 10
		left wLeftCol
		width wRightCol
	.search, .editor
		top pyLiner * 0.6
	.search
		left 0
		width wLeftCol

#backgrounds
	top 0
	height 100%
#fixed
	z-index zLiner + 2
#search-tabs-list-wrapper, #note-list-wrapper, #editor-tabs-list-wrapper, #editor-controls-list-wrapper
	position absolute
	top	0
	margin 0
	padding 0
#search-tabs-list-wrapper, #editor-tabs-list-wrapper
	top pyLiner
	height hTabs
#search-tabs-list-wrapper
	left 0
	width wLeftCol
#note-list-wrapper
	top	pyLiner + hTabs
	left 0
	width wLeftCol
#editor-tabs-list-wrapper, #editor-controls-list-wrapper
	left wLeftCol
	width wRightCol
#editor-controls-list-wrapper
	top pyLiner + hTabs
	height hControls

// Scrollables
#scrollables
	position absolute
	top	pyLiner + hTabs + hControls
	left 50%
	margin-left - (wApp / 2)
#editor-note-content-list
	position absolute
	top	0
	margin 0
	padding 0
	left wLeftCol
	width wRightCol


//==============================================================
// Backgrounds
//==============================================================

body
	background linear-gradient(top, cLightGrey 0px, cLightGrey 150px, darken(cLightGrey, 10%) 150px, cLightGrey 200px)
	background-attachment fixed

#header-bg
	position fixed
	left 0
	top	0
	width 100%
	height pyLiner + hTabs + hControls
	background linear-gradient(top, cLightGrey 0px, cLightGrey 150px, darken(cLightGrey, 10%) 150px,  cLightGrey pyLiner + hTabs, rgba(cLightGrey,0) pyLiner + hTabs + hControls + hFadeOut)
	background-attachment fixed
	z-index 2

#liner-bg
	position fixed
	height 1px
	width 100%
	background-color cBlueLine
	top pyLiner
	left 0
	z-index zLiner
#search-bg-top, #search-bg
	position absolute
	margin 0
	width wLeftCol
	background-color black
	background-attachment fixed
	opacity 0.6
#search-bg
	top pyLiner + hTabs + hControls
	height 100%
	z-index 0
#search-bg-top
	top 0
	height	pyLiner + hTabs + hControls
	z-index zLiner + 1

