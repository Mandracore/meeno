	//background transparent url(../images/write.png) no-repeat 0 0;
.search-icon
	//background transparent url(../images/search.png) no-repeat 0 0;


//==============================================================
// Text and others
//==============================================================

body
	font-family Helvetica, Arial
	font-size 0.9em
	color cText

#header
	.search
		.wrapper
			padding 0 0 0 wLeftColPad
			margin-left -10px
			input
				border-radius(8px)
				padding 5px 0 5px 10px
				background transparent
				font-size 1.5em
				border 0
				color cTextRev
				&:hover
					background cDarkGrey
					color cTextRev

	.editor
		.wrapper
			padding 0 0 0 wRightColPad
			button
				padding 0
				background transparent
				font-size 1.5em
				border 0
				color cTextFaded
				&:hover
					cursor pointer
					color cText

ul#editor-tabs-list, ul#search-tabs-list
	list-style-type none
	margin 0
	padding 0 30px
	color cTextFaded
	li
		float left
		margin 0
		padding 10px 20px
		letter-spacing .09em
		&:hover
			cursor pointer
			border-top 4px solid cBlueLine
			padding 6px 20px
			color cText
	.active
			border-top 4px solid cBlueLine
			padding 6px 20px
			color cText
ul#search-tabs-list
	color cTextRevFaded
	padding 0 20px
	li
		padding 10px 15px
		&:hover
			border-top 4px solid darken(cBlueLine, 40%)
			padding 6px 15px
			color cTextRev
	.active
		border-top 4px solid darken(cBlueLine, 40%)
		padding 6px 15px
		color cTextRev
#note-list
	padding 0 wLeftColPad

#editor-controls-list
	padding 0 50px
	.quit, .top
		float right

#note-list
	color cTextRev
	font-size 0.9em
	list-style-type none
	li
		padding 0 0 5px
		&:hover
			color cBlueLine
			cursor pointer

.editor-note-content
	padding 10px wRightColPad
	line-height 1.5em
	.attributes
		margin 0 0 20px 0
		border-left 30px solid rgba(cTextFaded, 0.3);
		padding 0 0 0 11px
		color cTextFaded
		line-height 1.3em
		p
			margin 0
	.editable
		color cText
		&:hover
			color darken(cText,80%)

