@import 'nib'

cDarkGrey  = lighten(#000000, 30%)
cLightGrey = lighten(#000000, 90%)
cBlueLine  = lighten(#5e939f, 40%)
wApp       = 1000px
wRightCol  = 700px
wLeftCol   = wApp - wRightCol
zLiner     = 5
pyLiner    = 147px
pHeadersV  = 40px
pWrappPadV = pyLiner - pHeadersV
hTabs      = 40px
hControls  = 40px
hFadeOut   = 70px


//==============================================================
// Layout 2
//==============================================================

// Fixed	
#header
	position fixed
	left 0
	top	0
	width 100%
	height pyLiner + hTabs + hControls
	background linear-gradient(top, cLightGrey 0px, cLightGrey 150px, darken(cLightGrey, 10%) 150px,  cLightGrey pyLiner + hTabs, rgba(cLightGrey,0) pyLiner + hTabs + hControls + hFadeOut)
	background-attachment fixed
	z-index 2
#fixed, #backgrounds
	position fixed
	top 0
	left 50%
	margin-left -(wApp / 2)
	padding 0
	width wApp
#backgrounds
	top 0
	height 100%
#fixed
	z-index zLiner + 2
#search-tabs-list, #editor-tabs-list, #editor-controls-list
	position absolute
#search-tabs-list, #editor-tabs-list
	top pyLiner
	height hTabs
#search-tabs-list
	left 0
	width wLeftCol
#editor-tabs-list, #editor-controls-list
	left wLeftCol
	width wRightCol
#editor-controls-list
	top pyLiner + hTabs
	height hControls

// Scrollables
#scrollables
	position absolute
	top	pyLiner + hTabs + hControls
	left 50%
	margin-left - (wApp / 2)
#note-list, #editor-note-content-list
	position absolute
	top	0
	margin 0
	padding 0
#note-list
	left 0
	width wLeftCol
#editor-note-content-list
	left wLeftCol
	width wRightCol


//==============================================================
// Backgrounds
//==============================================================

body
	background linear-gradient(top, cLightGrey 0px, cLightGrey 150px, darken(cLightGrey, 10%) 150px, cLightGrey 200px)
	background-attachment fixed

#liner-bg
	position fixed
	height 1px
	width 100%
	background-color cBlueLine
	top pyLiner
	left 0
	z-index zLiner
#search-bg-top, #search-bg
	position absolute
	margin 0
	width wLeftCol
	background-color black
	background-attachment fixed
	opacity 0.3
#search-bg
	top pyLiner + hTabs + hControls
	height 100%
	z-index 0
#search-bg-top
	top 0
	height	pyLiner + hTabs + hControls
	z-index zLiner + 1

//==============================================================
// Other
//==============================================================


#editor-tabs-list, #search-tabs-list
	list-style-type none
	margin 0
	padding 0
	li
		float left
		margin 0
		padding 10px 30px 10px
		&:hover
			cursor pointer
			border-top 4px solid cBlueLine
			padding 6px 30px 10px
	.active
			border-top 4px solid cBlueLine
			padding 6px 30px 10px

.editor-controls
	padding 10px 0 0 30px

.editor-note-content
	padding 10px 0 0 30px