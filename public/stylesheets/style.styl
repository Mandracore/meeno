#editor-list
	position: fixed
	bottom: 0
	width: 800px
	background-color:lightgrey
	margin:0
	padding:0
	li#new-note
		background-color:grey
		color:white
		font-family: Helvetica
		padding: 0.6em
	li.editor
		border-top:1px solid grey
		.header
			position: relative
			background-color #CACACA
			font-family: Helvetica
			padding: 0.6em
			.control
				display:none
				margin 0
				padding 0
				button
					padding 0
					margin 0 5px 0
			&:hover .control
				display:inline-block
			.window
				position absolute
				right 0.6em
				top 0.6em
				button
					margin-right: 5px